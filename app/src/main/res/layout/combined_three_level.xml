<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/chainage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/_5sdp"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/thumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_44sdp"
                        android:background="@drawable/gradient"

                        android:clickable="true"
                        android:scaleType="fitXY" />

                    <com.nic.RdAssetTrackingAndMonitoringSystem.Support.MyCustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="01"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/_20sdp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/gradient_pink"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_44sdp"
                        android:layout_below="@+id/thumbnail"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/gradient_pink"
                        android:clickable="true"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/gradient_blue"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_44sdp"
                        android:layout_below="@+id/gradient_pink"

                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/gradient_blue"
                        android:clickable="true"
                        android:scaleType="fitXY" />

                    <ImageView

                        android:layout_width="@dimen/_48sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_below="@+id/thumbnail"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/triangle"
                        android:clickable="true"
                        android:scaleType="fitXY" />


                    <ImageView
                        android:id="@+id/triangle_pink"
                        android:layout_width="@dimen/_48sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_below="@+id/gradient_pink"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/triangle_pink"
                        android:clickable="true"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:layout_width="@dimen/_48sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_below="@+id/gradient_blue"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        android:background="@drawable/triangle_blue"
                        android:clickable="true"
                        android:scaleType="fitXY" />
                </RelativeLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
