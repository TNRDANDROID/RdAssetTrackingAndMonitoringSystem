<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:foreground="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:id="@+id/road_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="60dp"

            android:orientation="horizontal">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/district_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_130sdp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="55dp"
                android:layout_marginBottom="15dp"

                card_view:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:id="@+id/header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.nic.RdAssetTrackingAndMonitoringSystem.Support.MyCustomTextView
                            android:id="@+id/road_code"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginTop="@dimen/_4sdp"
                            android:padding="@dimen/_5sdp"
                            android:textAlignment="textStart"
                            android:textColor="#060606"
                            android:textSize="@dimen/_18sdp"
                            customfontdemo:fontName="@string/font_bold" />


                    </RelativeLayout>
                    <!--<RelativeLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_below="@+id/header"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--&gt;-->

                    <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginTop="@dimen/_4sdp"-->
                    <!--android:padding="@dimen/_5sdp"-->
                    <!--android:textAlignment="textStart"-->
                    <!--android:textColor="#060606"-->
                    <!--android:textSize="@dimen/_18sdp"/>-->

                    <!--</RelativeLayout>-->

                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="290dp"
            android:layout_height="@dimen/_130sdp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_10sdp"
            app:srcCompat="@drawable/full_corner_bg_white"
            >

            <RelativeLayout
                android:id="@+id/road_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="3dp"
                android:layout_centerInParent="true"
                android:background="@drawable/layer_list_gray"
                android:orientation="vertical">


                <com.nic.RdAssetTrackingAndMonitoringSystem.Support.MyCustomTextView
                    android:id="@+id/road_village_name"
                    android:layout_width="@dimen/_170sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_17sdp"
                    android:background="@drawable/corner_bg_white"
                    android:padding="10dp"
                    android:text=""
                    android:textAlignment="textStart"
                    android:textColor="#74706f"
                    android:textSize="18sp"
                    customfontdemo:fontName="@string/font_medium" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/road_village_name"
                    android:layout_alignParentBottom="true">

                    <com.nic.RdAssetTrackingAndMonitoringSystem.Support.MyCustomTextView
                        android:id="@+id/road_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:padding="5dp"
                        android:text=""
                        android:textAlignment="textStart"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_16sdp"
                        customfontdemo:fontName="@string/font_normal" />
                </LinearLayout>

            </RelativeLayout>


        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
