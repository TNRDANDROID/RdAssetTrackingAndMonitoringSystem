<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/chainage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <ImageView
                    android:id="@+id/triangle_orange"
                    android:layout_width="@dimen/_18sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:background="@drawable/triangle"
                    android:rotation="180"
                    android:scaleType="fitXY"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gradient"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/arrow_img"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_4sdp"

                        android:src="@drawable/right_arrow" />

                    <com.nic.RdAssetTrackingAndMonitoringSystem.Support.MyCustomTextView
                        android:id="@+id/second_level_tv"
                        android:layout_width="match_parent"
                        android:layout_height="65dp"
                        android:layout_toRightOf="@+id/arrow_img"
                        android:layout_centerVertical="true"
                        android:layout_centerInParent="true"
                        android:padding="10dp"
                        android:text="Transport And Communicication Infrastructure"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold" />

                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
